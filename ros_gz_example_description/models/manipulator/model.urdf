<?xml version="1.0" ?>
<robot name="manipulator">
  <!-- Link Definitions -->
  <link name="world"/>

  <joint name="world_to_drone" type="fixed">
    <parent link="world"/>
    <child link="link_drone"/>
    <origin xyz="0 0 0" rpy="0 0 0"/> <!-- World 좌표계와 동일 -->
  </joint>
  
<link name="link_drone">
  <inertial>
    <origin xyz="0 0 0.15" rpy="0 0 0"/> <!-- Center of mass adjustment -->
    <mass value="1"/>
    <inertia ixx="0.032" ixy="0" ixz="0" iyy="0.032" iyz="0" izz="0.00012"/>
  </inertial>
  <visual>
    <geometry>
      <box size="0.7 0.7 0.3"/>
    </geometry>
    <material name="blue">
      <color rgba="0.0 0.0 1.0 1.0"/> <!-- 파란색 -->
    </material>
  </visual>
  <collision>
    <geometry>
      <box size="0.7 0.7 0.3"/>
    </geometry>
  </collision>
</link>

  <joint name="joint_1" type="revolute">
    <parent link="link_drone"/>
    <child link="link_1"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/> <!-- link_drone의 위쪽 중심 -->
    <axis xyz="0 0 1"/> <!-- Z축 회전 -->
    <limit lower="-1.57" upper="1.57" effort="100" velocity="10.0"/>
  </joint>

  <link name="link_1">
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.1"/>
      </geometry>
      <material name="cyan">
        <color rgba="0.0 1.0 1.0 1.0"/> <!-- 청록색 -->
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.1"/>
      </geometry>
    </collision>
  </link>

  <joint name="joint_2" type="revolute">
    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="0.0 0 0.05" rpy="1.57 0 0"/> <!-- link_1 끝에서 x축 방향으로 -90도 회전 -->
    <axis xyz="0 0 1"/> <!-- X축 회전 -->
    <limit lower="-1.57" upper="1.57" effort="100" velocity="10.0"/>
  </joint>

  <link name="link_2">
    <inertial>
      <origin xyz="0.1 0 0" rpy="0 1.57 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin xyz="0.1 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.2"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/> <!-- 빨간색 -->
      </material>
    </visual>
    <collision>
      <origin xyz="0.1 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.2"/>
      </geometry>
    </collision>
  </link>

  <joint name="joint_3" type="revolute">
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin xyz="0.2 0 0.0" rpy="0 0 0"/> <!-- link_1 끝에서 x축 방향으로 -90도 회전 -->
    <axis xyz="0 0 1"/> <!-- X축 회전 -->
    <limit lower="-1.57" upper="1.57" effort="100" velocity="10.0"/>
  </joint>

  <link name="link_3">
    <inertial>
      <origin xyz="0.1 0.0 0.0" rpy="0 1.57 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin xyz="0.1 0.0 0.0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.2"/>
      </geometry>
      <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/> <!-- 초록색 -->
      </material>
    </visual>
    <collision>
      <origin xyz="0.1 0.0 0.0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.2"/>
      </geometry>
    </collision>
  </link>
</robot>
