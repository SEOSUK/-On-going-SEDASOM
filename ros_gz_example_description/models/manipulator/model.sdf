<?xml version="1.0" ?>
<sdf version="1.8">
    <model name="manipulator">
        <self_collide>true</self_collide>
        
        <!-- Base Link -->
        <link name="base_link">
            <pose>0 0 0 0 0 0</pose>
            <inertial>
                <mass>1.0</mass>
                <inertia>
                    <ixx>0.01</ixx>
                    <ixy>0.0</ixy>
                    <ixz>0.0</ixz>
                    <iyy>0.01</iyy>
                    <iyz>0.0</iyz>
                    <izz>0.01</izz>
                </inertia>
            </inertial>
            <visual name="visual_base">
                <geometry>
                    <box>
                        <size>0.7 0.7 0.05</size>
                    </box>
                </geometry>
                <material>
                    <ambient>0.0 1.0 0.0 1.0</ambient>
                    <diffuse>0.0 1.0 0.0 1.0</diffuse>
                    <specular>0.5 0.5 0.5 1.0</specular>
                </material>
            </visual>
            <collision name="collision_base">
                <geometry>
                    <box>
                        <size>1 1 0.1</size>
                    </box>
                </geometry>
            </collision>
            <!-- Joint 1 Visual (Sphere) -->
            <visual name="visual_joint_1">
            <pose relative_to="link_1">0 0 -0.1 0 0 0</pose>                            
                <geometry>
                    <sphere>
                        <radius>0.07</radius>
                    </sphere>
                </geometry>
                <material>
                    <ambient>1.0 1.0 0.0 1.0</ambient>
                    <diffuse>1.0 1.0 0.0 1.0</diffuse>
                </material>
            </visual>
        </link>

        <!-- Joint 1 -->
        <joint name="joint_1" type="revolute">
            <pose relative_to="link_1">0 0 -0.1 0 0 0</pose>                
            <parent>base_link</parent>
            <child>link_1</child>
            <axis>
                <xyz>0 0 1</xyz>
                <limit>
                    <lower>-1.57</lower>
                    <upper>1.57</upper>
	            <effort>1000</effort>
                </limit>
        <dynamics>
            <damping>1</damping>
            <friction>0.0</friction> 
        </dynamics>                
            </axis>
        </joint>


        <!-- Link 1 -->
        <link name="link_1">
            <pose>0 0 0.1 0 0 0</pose>
            <inertial>
                <mass>0.5</mass>
                <inertia>
		    <ixx>0.048</ixx>
		    <iyy>0.048</iyy>
		    <izz>0.0025</izz>
                </inertia>
            </inertial>
            <visual name="visual_link_1">
                <geometry>
                    <cylinder>
                        <radius>0.03</radius>
                        <length>0.2</length>
                    </cylinder>
                </geometry>
                <material>
                    <ambient>0.0 0.0 1.0 1.0</ambient>
                    <diffuse>0.0 0.0 1.0 1.0</diffuse>
                </material>
            </visual>
            <collision name="collision_link_1">
                <geometry>
                    <cylinder>
                        <radius>0.03</radius>
                        <length>0.2</length>
                    </cylinder>
                </geometry>
            </collision>
            <!-- Joint 2 Visual (Sphere) -->
            <visual name="visual_joint_2">
            <pose relative_to="link_2">0 0 -0.2 0 0 0</pose>        
                <geometry>
                    <sphere>
                        <radius>0.04</radius>
                    </sphere>
                </geometry>
                <material>
                    <ambient>1.0 1.0 0.0 1.0</ambient>
                    <diffuse>1.0 1.0 0.0 1.0</diffuse>
                </material>
            </visual>
        </link>

        <!-- Link 2 -->
        <link name="link_2">
            <pose relative_to="link_1">0 0 0.3 0 0 0</pose>
            <inertial>
                <mass>1.0</mass>
                <inertia>
		    <ixx>0.084</ixx>
		    <iyy>0.084</iyy>
		    <izz>0.005</izz>
                </inertia>
            </inertial>
            <visual name="visual_link_2">
                <geometry>
                    <cylinder>
                        <radius>0.03</radius>
                        <length>0.4</length>
                    </cylinder>
                </geometry>
                <material>
                    <ambient>1.0 0.0 0.0 1.0</ambient>
                    <diffuse>1.0 0.0 0.0 1.0</diffuse>
                </material>
            </visual>
            <collision name="collision_link_2">
                <geometry>
                    <cylinder>
                        <radius>0.03</radius>
                        <length>0.4</length>
                    </cylinder>
                </geometry>
            </collision>
        </link>

        <!-- Joint 2 -->
        <joint name="joint_2" type="revolute">
        <pose relative_to="link_2">0 0 -0.2 0 0 0</pose>        
            <parent>link_1</parent>
            <child>link_2</child>
            <axis>
                <xyz>1 0 0</xyz>
                <limit>
                    <lower>-1.57</lower>
                    <upper>1.57</upper>
	            <effort>1000</effort>
                </limit>
        <dynamics>
            <damping>11</damping>
            <friction>0.0</friction> 
        </dynamics>                              
            </axis>
        </joint>


        <!-- Joint Controller Plugin -->
        <plugin
            filename="ignition-gazebo-joint-position-controller-system"
            name="ignition::gazebo::systems::JointPositionController">
            <joint_name>joint_1</joint_name>
	    <topic>joint_1/cmd</topic>
	    <p_gain>1000</p_gain>
	    <i_gain>0.1</i_gain>
	    <d_gain>0.01</d_gain>
	    <i_max>1</i_max>
	    <i_min>-1</i_min>
	    <cmd_max>1000</cmd_max>
  	    <cmd_min>-1000</cmd_min>
        </plugin>
        
        <plugin
            filename="ignition-gazebo-joint-position-controller-system"
            name="ignition::gazebo::systems::JointPositionController">
            <joint_name>joint_2</joint_name>
	    <topic>joint_2/cmd</topic>
	    <p_gain>1000</p_gain>
	    <i_gain>0.1</i_gain>
	    <d_gain>0.01</d_gain>
	    <i_max>1</i_max>
	    <i_min>-1</i_min>
	    <cmd_max>1000</cmd_max>
  	    <cmd_min>-1000</cmd_min>            
        </plugin> 

    </model>
</sdf>

